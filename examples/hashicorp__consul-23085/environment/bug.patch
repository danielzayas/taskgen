-	if err != nil {
-		return cfg, fmt.Errorf("invalid virtual_ip_cidr_v6: %w", err)
-	}
-
-	cfg.startingIPv4 = startV4
-	cfg.maxOffsetIPv4 = maxOffsetV4
-	cfg.startingIPv6 = startV6
-	cfg.maxOffsetIPv6 = maxOffsetV6
-	return cfg, nil
-}
